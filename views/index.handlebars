<div class="container text-center">
    <div class="row">
        <div class="col">
            <img id="burgerImage" src="./assets/img/burger.jpg" alt="juicy burger">
            <h2>Eat-Da-Burger!</h2>
        </div>
    </div>
    
    {{#if burgers}}
        <div id="burgers" class="row">
            <div id="undevoured" class="burger-list col-12 col-md-6">
                <ul class="list-group">
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{id}}. {{burger_name}}
                                <button class="devourBtn btn btn-secondary" data-id="{{id}}">Devour it!</button>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div id="devoured" class="burger-list col-12 col-md-6">
                <ul class="list-group">
                    {{#each burgers}}
                        {{#if devoured}}
                            <li class="list-group-item disabled align-items-center">
                                {{id}}. {{burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    {{/if}}

    <div class="row">
        <div class="col">
            <form class="create-form">
                <input type="text" class="form-control form-control-lg" id="inputBurgerName" placeholder="e.g. 'California Burger'">
                <small class="form-text text-muted">
                    Enter a burger name, then click the "Submit" button.
                </small>
                <button id="submitNewBurger" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>